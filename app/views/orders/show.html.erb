<section class="orders-show">

  <header class="page-header">
    <h1>Order from <%= @order.email%></h1>
    <% puts "#{@order.inspect}"%>
  </header>
   <table class="table table-bordered">
<thead>
        <tr>
          <th colspan="2">Product Ordered</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
    <% for item in  @order.line_items do  %>
    <% plant =Product.find(item.id) %>
    <% puts ">>>>>  #{plant.inspect} " %>
     <%= render 'item', product: plant, quantity: item[:quantity].to_i %>
    <% end %>
     <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%=humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
   </table>
  
  <div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Thank you for your order!</h4>
      <hr>
        <p class="mb-0">Details of your order have been sent to <%= @order.email%>.</p>
  </div>




  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
